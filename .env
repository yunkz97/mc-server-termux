# =============================================================================
# MC SERVER TERMUX - CONFIGURACIÓN v1.0.0
# =============================================================================

# GENERAL
VERSION=1.0.0
FIRST_RUN=true

# MINECRAFT SERVER
SERVER_JAR=server.jar
JAVA_RAM=1G
USE_AIKAR_FLAGS=true
SERVER_PORT=25565

# PLAYIT.GG (Conexión Externa)
PLAYIT_ENABLED=true
PLAYIT_AUTO_RECONNECT=true
PLAYIT_HEALTH_CHECK_INTERVAL=30
PLAYIT_CLAIM_URL=
PLAYIT_TUNNEL_ADDRESS=

# FILEBROWSER (Gestión de Archivos)
FILEBROWSER_ENABLED=true
FILEBROWSER_PORT=8080
FILEBROWSER_USER=admin
FILEBROWSER_PASSWORD=

# MONITOR DE BATERÍA
BATTERY_MONITOR_ENABLED=true
BATTERY_CHECK_INTERVAL=60
BATTERY_ALERT_20=true
BATTERY_ALERT_10=true
BATTERY_ALERT_5=true

# SISTEMA
LOG_LEVEL=INFO
LOG_ROTATION_SIZE=10M
LOG_ROTATION_COUNT=5
AUTO_BACKUP=false
BACKUP_INTERVAL=24h

# RUTAS (No modificar a menos que sepas lo que haces)
BASE_DIR=~/mc-server-termux
SERVER_DIR=${BASE_DIR}/server
DATA_DIR=${BASE_DIR}/data
BIN_DIR=${BASE_DIR}/bin
LOG_DIR=${BASE_DIR}/logs
RUN_DIR=${BASE_DIR}/run
BACKUP_DIR=${BASE_DIR}/backups
